<Window x:Class="mvvm.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mvvm.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Label x:Name="FirstName" Content="Firstname:" HorizontalAlignment="Left" Margin="46,65,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LastName" Content="LastName:" HorizontalAlignment="Left" Margin="46,96,0,0" VerticalAlignment="Top"/>
        <Label x:Name="FullName" Content="FullName:" HorizontalAlignment="Left" Margin="46,143,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FirstNameText" HorizontalAlignment="Left" Height="23" Margin="113,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="LastNameText" HorizontalAlignment="Left" Height="23" Margin="113,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="FullNameTextBlock" HorizontalAlignment="Left" Margin="113,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#FFEAE6E6"/>
        <Button x:Name="Gem" Content="Gem" HorizontalAlignment="Left" Margin="209,241,0,0" VerticalAlignment="Top" Width="75" Click="Gem_Click"/>

    </Grid>
</Window>
